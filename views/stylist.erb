<h1><%= @stylist.name() %></h1>
<p><a href="/stylists/<%= @stylist.id() %>/edit">Edit <%= @stylist.name() %>'s' name</a></p>

<% if @stylist.clients().any?() %>
  <h3>Here are all the clients for this stylist:</h3>

  <ul>
    <% @stylist.clients().each() do |client| %>
      <li><a href="/clients/<%= client.id() %>"><%= client.name() %></li></a>
    <% end %>
  </ul>

<% else %>
  <p>There are no clients yet!</p>
<% end %>

<h3>Add a client to <%= @stylist.name() %> </h3>

<form action="/clients" method="post">
  <input id="stylist_id" name="stylist_id" type="hidden" value="<%= @stylist.id() %>">

  <label for="client_name">Client's name</label>
  <input id="client_name" name="client_name" type="text">

  <button type="submit">Add Client</button>
</form>

<h2>Remove clients</h2>

    <form action="/client" method="post">
      <input type="hidden" name="_method" value="delete">
      <label for="remove_client_id">Select a Client</label>
      <select id='remove_client_id' name='remove_client_id' type='text' required>
        <% @clients.each() do |client| %>
          <option value="<%= client.id()%>"> <%= client.name() %> </option>
        <% end %>
      </select>
      <button class="btn btn-success" type="submit" name="button">Delete Client</button>
    </form>
<div class ="container"><br>
<button class ="btn btn-success"><a href="/">Return to Main Page</a></button>
</div>
